@model IEnumerable<VisitWro.Models.Address>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Adresy</title>
    <meta charset="utf-8" />
    <style>
        .button_area{
            margin-top: 5px;
            margin-bottom: 5px;
        }

       .button_area a {
                background: #0094ff;
                color: #ffffff;
                padding-bottom: 10px;
                padding-top: 10px;
            }

        table {
            margin-left: 10px;
            margin-right: 10px;
            margin-top: 10px;
        }

    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("VisitWroclove", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Adresy", "Index", "Addresses", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Wydarzenia", "Index", "Events", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Miejsca", "Index", "Places", new { area = "" }, null)</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-12">
        <div class="button_area">
            <a class="btn" href="/Addresses/Create">
                Utwórz nowy adres
            </a>
        </div>
        <table class="table table-hover">
            <tr>
                <th>
                    Ulica
                </th>
                <th>
                    Numer domu
                </th>
                <th>
                    Kod pocztowy
                </th>
                <th>
                    Miasto
                </th>
                <th>
                    Szerokość geograficzna
                </th>
                <th>
                    Długość geograficzna
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HomeNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ZipCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.City)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lat)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Lng)
                    </td>
                    <td>
                        @Html.ActionLink("Edycja", "Edit", new { id = item.AddressId }) |
                        @Html.ActionLink("Szczegóły", "Details", new { id = item.AddressId }) |
                        @Html.ActionLink("Usuń", "Delete", new { id = item.AddressId })
                    </td>
                </tr>
            }

        </table>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
